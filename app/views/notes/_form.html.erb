<% if @note.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-8" role="alert">
    <strong class="font-bold">Error!</strong>
    <ul class="list-disc list-inside">
      <% @note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @note, local: true do |form| %>
  <div class="flex flex-col gap-2">
    <div class="flex flex-col gap-2">
      <%= form.label :title, class: "font-bold" %>
      <%= form.text_field :title, class: "border border-gray-300 p-2 rounded" %>
    </div>
    <div class="flex flex-col gap-2">
      <%= form.label :content, class: "font-bold" %>
      <%= form.rich_text_area :content, class: "border border-gray-300 p-2 h-80 rounded" %>
    </div>
    <div class="flex flex-col gap-2">
      <%= form.submit "Save", class: "font-bold bg-blue-500 text-white p-2 rounded" %>
      <%= link_to "Cancel", notes_path, class: "font-bold text-red-500" %>
    </div>
  </div>
<% end %>